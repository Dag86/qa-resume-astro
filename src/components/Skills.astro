---
import type { Skills } from "../types/resume";
export interface Props { data: Skills }
const { data } = Astro.props as Props;
---
<section id="skills" aria-labelledby="skills-h">
  <h2 id="skills-h" class="section-title">Skills</h2>
  <div class="grid auto">
    <article class="card">
      <h3 style="margin:.1rem 0 .5rem;">Languages</h3>
      <div class="chips">
        {data.languages.map((s: string) => <span class="chip">{s}</span>)}
      </div>
    </article>

    <article class="card">
      <h3 style="margin:.1rem 0 .5rem;">Frameworks</h3>
      <div class="chips">
        {data.frameworks.map((s: string) => <span class="chip">{s}</span>)}
      </div>
    </article>

    <article class="card">
      <h3 style="margin:.1rem 0 .5rem;">Tools</h3>
      <div class="chips">
        {data.tools.map((s: string) => <span class="chip">{s}</span>)}
      </div>
    </article>

    <article class="card">
      <h3 style="margin:.1rem 0 .5rem;">Testing Types</h3>
      <div class="chips">
        {data.testingTypes.map((s: string) => <span class="chip">{s}</span>)}
      </div>
    </article>

    {data.aiTools?.length ? (
      <article class="card">
        <h3 style="margin:.1rem 0 .5rem;">AI Tools</h3>
        <div class="chips">
          {data.aiTools.map((s: string) => <span class="chip">{s}</span>)}
        </div>
      </article>
    ) : null}
  </div>
</section>
